<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <!--    android:paddingHorizontal="42dp"-->
    <!--    android:paddingVertical="16dp"-->
    <!--    android:layout_gravity="center_vertical"-->

    <!--新布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="88pt">
        <!--        android:background="@drawable/shape_privacy_bg"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:layout_marginTop="60pt"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="欢迎使用"
            android:textColor="@color/color_333333"
            android:textSize="36pt"
            android:textStyle="bold" />
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="西瓜智选股"
            android:textColor="@color/color_333333"
            android:textSize="80pt"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1">

            <!-- WebView -->
            <com.amos.study.widget.ObservableWebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="60pt"
                android:layout_marginTop="48pt" />
            <!--            android:overScrollMode="never"-->
            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:layout_alignParentBottom="true"
                  android:background="@drawable/shape_privacy_alpha_bg" />-->

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginTop="48pt"
            android:layout_marginBottom="234pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="60pt">

            <TextView
                android:id="@+id/tv_left_btn"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_privacy_disagree_btn_bg"
                android:gravity="center"
                android:text="不同意"
                android:textColor="@color/color_CCCCCC"
                android:textSize="32pt" />


            <TextView
                android:id="@+id/tv_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="30pt"
                android:layout_weight="1"
                android:background="@drawable/shape_privacy_agree_btn_bg"
                android:gravity="center"
                android:text="同意并继续"
                android:textColor="@color/color_white"
                android:textSize="32pt" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>